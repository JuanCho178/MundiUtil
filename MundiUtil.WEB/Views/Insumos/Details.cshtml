@model MundiUtil.WEB.Dtos.GuardarInsumoDto

@{
    ViewData["Title"] = "Details";
}

<h1>Detalle del Insumo</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cantidad)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cantidad)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReferenciaInsumo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReferenciaInsumo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoInsumo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoInsumo)
        </dd>
    </dl>
    <div class="row">
         <a asp-action="Edit" asp-route-id="@Model.IdInsumos" class="btn btn-primary"><i class="fas fa-pen-square"></i></a>  |
        <form method="post" asp-action="Delete" asp-route-id="@Model.IdInsumos">  
            <button type="submit" class="btn btn-danger m1-1" onclick="return confirm ('Deseas eliminar este registro?')"><i class="fa fa-trash-alt fa-lg"></i></button> |
            <a type="submit" asp-action="Index" class="btn btn-success">Regresar</a>
        </form>
    </div>
</div>

