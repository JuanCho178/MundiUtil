@model MundiUtil.WEB.Dtos.GuardarInsumoDto

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Insumo</h4>
<hr />
<div class="row g-3">
    <div class="col-md-6">
        <form asp-action="Edit" asp-route-id="@Model.IdInsumos">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdInsumos" />
            <div class="form-group col-md-6">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group col-12">
                <label asp-for="ReferenciaInsumo" class="control-label"></label>
                <input asp-for="ReferenciaInsumo" class="form-control" />
                <span asp-validation-for="ReferenciaInsumo" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="TipoInsumo" class="control-label"></label>
                <select asp-for="TipoInsumo" asp-items="@ViewBag.ListaTipoInsumo" asp-for="TipoInsumo" class="form-control select-list">
                    <option disabled>--- Seleccione ---</option>
                </select>
                <span asp-validation-for="TipoInsumo" class="text-danger error"></span>
            </div>
            <div class="form-group">
                <input type="submit-sucess" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a type="submit" asp-action="Index"><i class="fas fa-undo-alt"></i></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
